<script>
/* ----------------------------
   Full script merged & updated
   ---------------------------- */

/* ---------- Wrap - DOM ready ---------- */
window.addEventListener('load', function(){

  /* ---------- Storage & seed ---------- */
  const MOOD_KEY = 'safespace_moods_v3';
  let moods = JSON.parse(localStorage.getItem(MOOD_KEY) || '[]');

  if(moods.length === 0){
    const today = new Date()
